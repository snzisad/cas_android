<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="City"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView26"/>

        <Spinner android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:id="@+id/spnCity"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView26"
                 android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                 android:layout_marginRight="20dp" />

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorAsh"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
              app:layout_constraintTop_toBottomOf="@+id/spnCity" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Location"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/spnCity"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView27"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtLocation"
                  android:inputType="textPersonName"
                  android:hint="Enter Your Location"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView27" app:layout_constraintHorizontal_bias="0.0"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Category"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/edtLocation"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView28"/>

        <Spinner android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:id="@+id/spnCategory"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView28"
                 android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                 android:layout_marginRight="20dp" />

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorAsh"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
              app:layout_constraintTop_toBottomOf="@+id/spnCategory" />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/llSubcategory"
                      android:visibility="gone"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                      android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                      app:layout_constraintEnd_toEndOf="parent"
                      app:layout_constraintTop_toBottomOf="@+id/spnCategory"
                      android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
                     android:orientation="vertical">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Sub Category"
                      android:textColor="@color/colorLight"
                      android:textSize="18sp"
                      android:id="@+id/textView29"/>

            <Spinner android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:id="@+id/spnSubCategory" />

            <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorAsh"/>
        </LinearLayout>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Title"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/llSubcategory"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView30"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtTitle"
                  android:inputType="textPersonName"
                  android:hint="Enter Product Title"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView30" app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintVertical_bias="0.049"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Description"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtTitle"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView31"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="100dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtDescription"
                  android:gravity="top"
                  android:hint="Enter Product Details"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView31" app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintVertical_bias="0.049"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Product Condition"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/edtDescription"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView32"/>

        <Spinner android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:id="@+id/spnCondition"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView32"
                 android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                 android:entries="@array/product_condition"
                 android:layout_marginRight="20dp" />

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorAsh"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
              app:layout_constraintTop_toBottomOf="@+id/spnCondition" />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Product Type"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintTop_toBottomOf="@+id/spnCondition"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView33"/>

        <Spinner android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:id="@+id/spnProductType"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView33"
                 android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                 android:entries="@array/product_type"
                 android:layout_marginRight="20dp" />

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorAsh"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
              app:layout_constraintTop_toBottomOf="@+id/spnProductType" />


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Price"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/spnProductType"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView34"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtPrice"
                  android:inputType="number"
                  android:hint="Enter Product Price"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView34" app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintVertical_bias="0.049"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Your Name"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/edtPrice"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView21"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtName"
                  android:inputType="textPersonName"
                  android:hint="Enter Your Name"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView21" app:layout_constraintHorizontal_bias="0.0"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Phone Number"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtName" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="30dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView24"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtPhone"
                  android:inputType="phone"
                  android:hint="Enter Phone Number"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView24" app:layout_constraintHorizontal_bias="0.0"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtPhone"
                  android:id="@+id/textView25"
                  android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:hint="Enter Your Email"
                  android:inputType="textEmailAddress"
                  android:id="@+id/edtEmail"
                  android:layout_marginRight="20dp"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintTop_toBottomOf="@+id/textView25"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Pictures"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtEmail"
                  android:id="@+id/textView36"
                  android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="25dp"
                  android:text="No image selected"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/textView36"
                  android:id="@+id/tvPic1"
                  android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Choose..."
                android:id="@+id/btnChoosePic1"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/textView36"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="25dp"
                  android:text="No image selected"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/tvPic1"
                  android:id="@+id/tvPic2"
                  android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Choose..."
                android:id="@+id/btnChoosePic2"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPic1"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="25dp"
                  android:text="No image selected"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/tvPic2"
                  android:id="@+id/tvPic3"
                  android:layout_marginTop="15dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <Button android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Choose..."
                android:id="@+id/btnChoosePic3"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPic2"/>


        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post"
                android:background="@color/colorDanger"
                style="@style/Widget.AppCompat.Button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/tvPic3" app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/btnPost" android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

    </android.support.constraint.ConstraintLayout>

</ScrollView>