<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:cardCornerRadius="5dp"
                                    android:layout_margin="1dp"
                                    android:clickable="true"
                                    android:id="@+id/cardProductInfo"
                                    android:foreground="?android:selectableItemBackground"
                                    app:cardBackgroundColor="@color/colorLight"
                                    app:cardElevation="5dp"
                                    android:visibility="visible"
                                    app:layout_constraintHorizontal_bias="1.0"
                                    tools:ignore="NamespaceTypo">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

        <ImageView android:layout_width="80dp"
                   android:layout_height="100dp"
                   android:id="@+id/imgProductThumb"
                   android:src="@drawable/mobile"
                   android:scaleType="fitXY"/>

        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="5dp"
        >

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/tvProductName"
                      android:text="Samsung Galaxy S8 for sale in muradpur chittagong"
                      app:layout_constraintStart_toEndOf="@+id/imgProductThumb"
                      android:textColor="@color/colorPrimaryDark"
                      android:textSize="18sp"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/tvProductPrice"
                      android:text="15000 taka"
                      app:layout_constraintStart_toEndOf="@+id/imgProductThumb"
                      android:textColor="@color/colorDark"
                      android:layout_marginTop="2dp"
                      android:textSize="16sp"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/tvProductLocation"
                      android:text="Greenview residential area, Oxygen, Chittagong"
                      app:layout_constraintStart_toEndOf="@+id/imgProductThumb"
                      android:textColor="@color/colorDarkLite"
                      android:layout_marginTop="2dp"
                      android:textSize="16sp"/>

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>