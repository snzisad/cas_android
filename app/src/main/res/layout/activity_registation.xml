<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Name"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="20dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView21"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtName"
                  android:inputType="textPersonName"
                  android:hint="Enter Name"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView21" app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView21"
                  app:layout_constraintVertical_bias="0.049"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Address"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtName"
                  android:id="@+id/textView23"
                  android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:hint="Enter Address"
                  android:inputType="textPersonName"
                  android:id="@+id/edtAddress"
                  android:layout_marginRight="20dp"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintTop_toBottomOf="@+id/textView23"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Phone Number"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtAddress" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="30dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView24"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtPhone"
                  android:inputType="phone"
                  android:hint="Enter Phone Number"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView24" app:layout_constraintHorizontal_bias="0.0"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView24"
                  app:layout_constraintVertical_bias="0.049"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtPhone"
                  android:id="@+id/textView25"
                  android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:hint="Enter Email"
                  android:inputType="textEmailAddress"
                  android:id="@+id/edtEmail"
                  android:layout_marginRight="20dp"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintTop_toBottomOf="@+id/textView25"/>


        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="NID"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtEmail" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="30dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView26"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtNID"
                  android:inputType="number"
                  android:hint="Enter NID"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView26" app:layout_constraintHorizontal_bias="0.0"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Username"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtNID"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" android:layout_marginTop="30dp"
                  android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:id="@+id/textView2"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:id="@+id/edtUsername"
                  android:inputType="textPersonName"
                  android:hint="Enter Username"
                  android:layout_marginRight="20dp" android:layout_marginTop="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.0"
        />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Password"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtUsername"
                  android:id="@+id/textView20"
                  android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <EditText android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
                  android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="20dp"
                  android:hint="Enter Password"
                  android:inputType="textPassword"
                  android:id="@+id/edtPassword"
                  android:layout_marginRight="20dp"
                  app:layout_constraintHorizontal_bias="0.0"
                  app:layout_constraintTop_toBottomOf="@+id/textView20"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="User Type"
                  android:textColor="@color/colorLight"
                  android:textSize="18sp"
                  app:layout_constraintTop_toBottomOf="@+id/edtPassword"
                  android:id="@+id/textView30"
                  android:layout_marginTop="20dp" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginLeft="20dp" android:layout_marginStart="20dp"/>

        <Spinner android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:id="@+id/spType"
                 app:layout_constraintStart_toStartOf="parent"
                 android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/textView30"
                 android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                 android:entries="@array/user_type"
                 android:layout_marginRight="20dp">

        </Spinner>

        <View android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/colorAsh"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="20dp" android:layout_marginStart="20dp" app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="20dp" android:layout_marginRight="20dp"
              app:layout_constraintTop_toBottomOf="@+id/spType"></View>

        <Button android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:background="@color/colorDanger"
                style="@style/Widget.AppCompat.Button"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="20dp" android:layout_marginStart="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp" android:layout_marginRight="20dp" android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@+id/spType" app:layout_constraintHorizontal_bias="0.0"
                android:id="@+id/btnRegister" android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>

</ScrollView>