<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/colorAsh"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:padding="0dp"
        tools:context=".ProductActivity">


    <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/rvProductList"
            android:layout_height="wrap_content" android:layout_marginTop="2dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginLeft="2dp" android:layout_marginStart="2dp"
            android:layout_alignParentLeft="true" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="2dp"
            android:layout_marginEnd="2dp">

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fabNewAd"
            android:src="@drawable/ic_add24dp"
            android:backgroundTint="@color/colorDanger"
            app:useCompatPadding="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>


</RelativeLayout>