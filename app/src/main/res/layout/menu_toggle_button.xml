<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content"
              android:text="Post"
              android:textColor="@color/colorLight"
              android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_marginTop="3dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView4"/>

    <Switch xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switchToggle"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            android:layout_marginLeft="0dp" android:layout_marginStart="3dp" android:layout_marginTop="0dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView android:layout_width="wrap_content"
              android:text="Auction"
              android:textColor="@color/colorLight"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView45"
              app:layout_constraintStart_toEndOf="@+id/switchToggle" android:layout_marginLeft="2dp"
              android:layout_marginStart="2dp"/>


</android.support.constraint.ConstraintLayout>