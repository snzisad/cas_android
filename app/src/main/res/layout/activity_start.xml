<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".StartActivity">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Classsified Auction System"
            android:textSize="35sp"
            android:textAllCaps="false"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/colorWarning"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="75dp" android:id="@+id/textView"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginRight="20dp"/>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        app:cardCornerRadius="15dp"
                                        app:cardElevation="10dp"
                                        android:id="@+id/cardCity"
                                        app:cardBackgroundColor="@color/colorPrimaryDark"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                                        android:layout_marginRight="20dp" android:layout_marginTop="44dp"
                                        app:layout_constraintTop_toBottomOf="@+id/textView"
                                        app:layout_constraintHorizontal_bias="1.0">
        <Spinner android:layout_width="match_parent"
                 android:layout_margin="10dp"
                 android:id="@+id/spnCity"
                 android:layout_height="match_parent">
        </Spinner>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        app:cardCornerRadius="15dp"
                                        app:cardElevation="10dp"
                                        android:id="@+id/cardCategory"
                                        app:cardBackgroundColor="@color/colorPrimaryDark"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                                        android:layout_marginRight="20dp" android:layout_marginTop="20dp"
                                        app:layout_constraintTop_toBottomOf="@+id/cardCity"
                                        app:layout_constraintHorizontal_bias="1.0">
        <Spinner android:layout_width="match_parent"
                 android:layout_margin="10dp"
                 android:id="@+id/spnCategory"
                 android:layout_height="match_parent">
        </Spinner>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        app:cardCornerRadius="15dp"
                                        app:cardElevation="10dp"
                                        android:id="@+id/cardSubCategory"
                                        app:cardBackgroundColor="@color/colorPrimaryDark"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                                        android:layout_marginRight="20dp" android:layout_marginTop="20dp"
                                        app:layout_constraintTop_toBottomOf="@+id/cardCategory"
                                        app:layout_constraintHorizontal_bias="1.0">
        <Spinner android:layout_width="match_parent"
                 android:layout_margin="10dp"
                 android:id="@+id/spnSubCategory"
                 android:layout_height="match_parent">
        </Spinner>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginStart="20dp"
                                        app:cardCornerRadius="15dp"
                                        android:clickable="true"
                                        android:foreground="?android:selectableItemBackground"
                                        app:cardBackgroundColor="@color/colorWarning"
                                        app:cardElevation="10dp"
                                        android:visibility="visible"
                                        android:id="@+id/cardContinue"
                                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="20dp"
                                        android:layout_marginRight="20dp" android:layout_marginTop="20dp"
                                        app:layout_constraintTop_toBottomOf="@+id/cardSubCategory"
                                        app:layout_constraintHorizontal_bias="1.0">
        <TextView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="GO"
                android:padding="5dp"
                android:textColor="@color/colorLight"
                android:textSize="25dp"
                android:gravity="center"/>

    </android.support.v7.widget.CardView>

    <ProgressBar android:layout_width="35dp"
                 android:layout_height="35dp"
                 app:layout_constraintStart_toStartOf="parent"
                 android:id="@+id/pbLoading"
                 android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
                 app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                 android:layout_marginRight="8dp"
                 android:layout_marginTop="25dp" app:layout_constraintTop_toBottomOf="@+id/cardSubCategory"/>


</android.support.constraint.ConstraintLayout>