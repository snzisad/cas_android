<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:gravity="right"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">

    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"
                  android:gravity="right"
                  android:layout_margin="5dp"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:text="Me"
                  android:id="@+id/tvPersonName"
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorDarkLite"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tvContent"
                  android:layout_marginTop="2dp"
                  android:layout_marginStart="50dp"
                  android:layout_marginLeft="50dp"
                  android:text="Hello I Want to buy "
                  android:layout_height="wrap_content"
                  android:textColor="@color/colorLight"
                  android:background="@color/colorBlue"
                  android:padding="5dp" />
    </LinearLayout>


    <ImageView android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_per2"
               app:layout_constraintStart_toStartOf="parent" android:layout_marginRight="5dp"
               android:layout_marginEnd="5dp" android:layout_marginTop="5dp"
               android:id="@+id/imageView"/>

</LinearLayout>